/* pages/index/index.wxss */
page {
  background: linear-gradient(180deg, #E0C3FC 0%, #F4EEFB 50%, #FFFFFF 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #333;
}

.container {
  padding: 20rpx 30rpx;
}

/* 顶部文案 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.sub-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.tips {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 日历大卡片 */
.calendar-card {
  background: #fff;
  border-radius: 30rpx;
  position: relative;
  padding: 40rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(161, 140, 209, 0.2);
  margin-bottom: 50rpx;
}

/* 顶部的环扣装饰 */
.hooks {
  position: absolute;
  top: -15rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.hook {
  width: 20rpx;
  height: 40rpx;
  background: #ddd;
  border-radius: 10rpx;
  box-shadow: inset 2rpx 2rpx 5rpx rgba(0,0,0,0.1);
}

.card-content {
  display: flex;
  justify-content: space-between;
}

/* 左侧日期区 */
.left-section {
  flex: 1;
  padding-right: 20rpx;
}
.year {
  font-size: 24rpx;
  color: #888;
}
.date-row {
  margin: 10rpx 0 30rpx 0;
  display: flex;
  align-items: baseline;
}
.day {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}
.slash {
  font-size: 40rpx;
  margin: 0 10rpx;
  color: #ccc;
}
.month, .weekday {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.lucky-item {
  margin-bottom: 20rpx;
}
.label {
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
.label.yi { background: #E8F5E9; color: #2E7D32; }
.label.ji { background: #FFEBEE; color: #C62828; }
.desc {
  font-size: 28rpx;
  color: #444;
}

/* 右侧游戏机样式 */
.right-section {
  width: 260rpx;
}
.game-console {
  background: linear-gradient(135deg, #9F85F3, #B8A1F8);
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 5rpx 5rpx 15rpx rgba(159, 133, 243, 0.4);
  color: #fff;
  text-align: center;
  position: relative; /* 关键：为了定位 dev-badge */
}
.console-header {
  font-size: 22rpx;
  background: #5E35B1;
  border-radius: 10rpx;
  padding: 4rpx 0;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.screen {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}
.screen-text { font-size: 20rpx; opacity: 0.8; }
.score { font-size: 60rpx; font-weight: bold; margin: 10rpx 0; }
.comment { font-size: 24rpx; margin-bottom: 10rpx; }
.attributes {
  display: flex;
  justify-content: space-around;
  font-size: 18rpx;
  opacity: 0.9;
}

/* 底部导航格 */
.section-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 30rpx;
}

.grid-nav {
  display: flex;
  justify-content: space-between;
}
.nav-card {
  width: 48%;
  background: #fff;
  border-radius: 25rpx;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative; /* 关键：为了定位 mask-text */
  overflow: hidden;
}
.nav-title { font-size: 32rpx; font-weight: bold; margin-bottom: 10rpx; }
.nav-sub { font-size: 22rpx; color: #999; margin-bottom: 20rpx; }
.nav-icon { width: 100rpx; height: 100rpx; }

/* --- 以下为新增样式：开发模式相关 --- */

/* 右上角标签 */
.dev-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ff9800; /* 橙色 */
  color: white;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-bottom-left-radius: 10rpx;
  border-top-right-radius: 20rpx; /* 匹配容器圆角 */
  z-index: 10;
  box-shadow: -2rpx 2rpx 5rpx rgba(0,0,0,0.1);
}

/* 变灰模式 */
.dev-mode {
  opacity: 0.9;
  background-color: #f8f8f8;
}

/* 遮罩文字 */
.mask-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); /* 半透明黑底 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
  z-index: 5;
  backdrop-filter: blur(2px); /* 可选：毛玻璃效果 */
}

/* --- 模拟器弹窗样式 --- */

/* 1. 全屏遮罩 */
.sim-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7); /* 深色遮罩 */
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(4px); /* 背景模糊 */
}

/* 2. 弹窗容器 */
.sim-modal-container {
  width: 620rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: popUp 0.3s ease-out forwards;
}

/* 弹窗动画 */
@keyframes popUp {
  0% { transform: scale(0.8); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

/* 3. 顶部标题 Tab */
.sim-header-tab {
  background: linear-gradient(to bottom, #7B1FA2, #6A1B9A);
  padding: 12rpx 50rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #FFEB3B; /* 黄色文字 */
  font-weight: bold;
  font-size: 30rpx;
  border: 4rpx solid #BA68C8;
  border-bottom: none;
  margin-bottom: -6rpx; /* 下沉连接机身 */
  z-index: 2;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.2);
}

/* 4. 游戏机机身 */
.sim-body {
  width: 100%;
  background: linear-gradient(180deg, #D1C4E9 0%, #B39DDB 100%); /* 浅紫渐变 */
  border-radius: 40rpx;
  padding: 35rpx;
  box-sizing: border-box;
  position: relative;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.3);
  border: 6rpx solid #9575CD; /* 深紫边框 */
}

/* 5. 内部屏幕 */
.sim-screen-inner {
  background: #9FA8DA; /* 屏幕底色 */
  border-radius: 20rpx;
  height: 550rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: inset 0 5rpx 15rpx rgba(0,0,0,0.2);
  border: 4rpx solid #7986CB;
}

.story-scroll {
  height: 100%;
}
.story-content {
  font-size: 30rpx;
  color: #fff;
  line-height: 1.6;
  text-align: justify;
  text-shadow: 0 2rpx 2rpx rgba(0,0,0,0.1);
}

/* --- 装饰元素 --- */

/* 螺丝钉 */
.screw {
  width: 18rpx;
  height: 18rpx;
  background: #512DA8;
  border-radius: 50%;
  position: absolute;
  box-shadow: inset 1rpx 1rpx 2rpx rgba(255,255,255,0.4);
}
.tl { top: 20rpx; left: 20rpx; }
.tr { top: 20rpx; right: 20rpx; }
.bl { bottom: 20rpx; left: 20rpx; }
.br { bottom: 20rpx; right: 20rpx; }

/* 侧边黄色按钮 */
.side-btn {
  position: absolute;
  top: 120rpx;
  width: 16rpx;
  height: 80rpx;
  background: #FFEB3B; /* 亮黄 */
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 5rpx rgba(0,0,0,0.2);
}
.side-btn.left { left: -12rpx; border-top-right-radius: 0; border-bottom-right-radius: 0; }
.side-btn.right { right: -12rpx; border-top-left-radius: 0; border-bottom-left-radius: 0; }

/* 6. 底部按钮 */
.sim-footer {
  margin-top: 50rpx;
}
.continue-btn {
  background: linear-gradient(90deg, #7B1FA2, #8E24AA);
  color: white;
  font-size: 32rpx;
  padding: 10rpx 100rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255,255,255,0.5);
  box-shadow: 0 5rpx 15rpx rgba(123, 31, 162, 0.4);
}